<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#E9E9E9"
                android:endColor="#E9E9E9"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#8C8C8C" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#E9E9E9"
                android:endColor="#E9E9E9"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E9E9E9" />
            <corners
                android:radius="2dp" />

        </shape>
    </item>
    <!-- focused -->

    <item>
        <shape>
            <gradient
                android:startColor="#E9E9E9"
                android:endColor="#E9E9E9"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#E9E9E9" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
    <!-- default -->
</selector>