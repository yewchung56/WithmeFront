<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendNoteActivity">
    <TextView
        android:id="@+id/txt_send_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="쪽지 보내기"
        android:textSize="18sp"
        android:textColor="#373839"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"/>
    <ImageButton
        android:id="@+id/btn_send_note_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.88dp"
        app:layout_constraintTop_toTopOf="@id/txt_send_note"
        app:layout_constraintBottom_toBottomOf="@id/txt_send_note"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/x"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/btn_send_note_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="3dp"
        android:layout_marginEnd="16.87dp"
        app:layout_constraintTop_toTopOf="@id/txt_send_note"
        app:layout_constraintBottom_toBottomOf="@id/txt_send_note"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="전송"
        android:textColor="#75DECD"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/txt_send_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.92dp"
        app:layout_constraintStart_toStartOf="@id/btn_send_note_end"
        app:layout_constraintTop_toBottomOf="@id/btn_send_note_end"
        android:text="모집글"
        android:textSize="12sp"
        android:textColor="#A3A5A4"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/txt_send_note_title_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13.62dp"
        app:layout_constraintTop_toTopOf="@id/txt_send_note_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_send_note_title"
        app:layout_constraintStart_toEndOf="@id/txt_send_note_title"
        android:text="모집글 제목"
        android:textColor="#373839"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/txt_send_note_recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.97dp"
        app:layout_constraintStart_toStartOf="@id/txt_send_note_title"
        app:layout_constraintTop_toBottomOf="@id/txt_send_note_title"
        android:text="To."
        android:textSize="12sp"
        android:textColor="#A3A4A5"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/txt_send_note_recipient_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_send_note_title_data"
        app:layout_constraintTop_toTopOf="@id/txt_send_note_recipient"
        app:layout_constraintBottom_toBottomOf="@id/txt_send_note_recipient"
        android:text="쪽지 받는 이"
        android:textColor="#737373"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"/>

    <View
        android:id="@+id/divider_send_note"
        android:layout_width="match_parent"
        android:layout_height="5.75dp"
        android:layout_marginTop="19.19dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/txt_send_note_recipient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_send_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.08dp"
        app:layout_constraintStart_toStartOf="@id/txt_send_note_recipient"
        app:layout_constraintEnd_toEndOf="@id/btn_send_note_send"
        app:layout_constraintTop_toBottomOf="@+id/divider_send_note"
        android:hint="내용을 입력해주세요."
        android:textSize="14sp"
        android:textColor="#C4C4C4"
        android:background="@android:color/transparent"
        android:minLines="1"
        android:maxLines="15"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:menu="@menu/navi_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>