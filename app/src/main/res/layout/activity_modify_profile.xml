<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyProfileActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_modify_my_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="내 정보 관리"
            android:textSize="18sp"
            android:textColor="#373839"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"/>
        <Button
            android:id="@+id/btn_modify_complete"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="15.81dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="수정 완료"
            android:textSize="12sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/button_pattern_no_padding_gray"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_modify_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_my_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/divider13"
            android:layout_marginStart="16.15dp"
            android:layout_marginTop="15.67dp"
            android:layout_marginBottom="16.68dp"
            android:src="@drawable/img_writer_example"
            app:civ_border_color="#373839"
            app:civ_border_width="1dp"/>
        <Button
            android:id="@+id/btn_modify_duplicate_check"
            android:layout_width="57dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/img_modify_user"
            app:layout_constraintBottom_toBottomOf="@id/img_modify_user"
            app:layout_constraintEnd_toEndOf="@id/btn_modify_complete"
            android:text="중복확인"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/button_pattern_no_padding"/>
        <EditText
            android:id="@+id/edt_modify_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12.02dp"
            android:layout_marginEnd="8.34dp"
            app:layout_constraintTop_toTopOf="@id/img_modify_user"
            app:layout_constraintBottom_toBottomOf="@id/img_modify_user"
            app:layout_constraintStart_toEndOf="@id/img_modify_user"
            app:layout_constraintEnd_toStartOf="@id/btn_modify_duplicate_check"
            android:background="@drawable/gray_border"
            android:hint="  닉네임 변경(2-10 숫자, 문자만)"
            android:textSize="12sp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>



        <View
            android:id="@+id/divider13"
            android:layout_width="409dp"
            android:layout_height="5.77dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="109dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txt_modify_identification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.6dp"
            android:layout_marginTop="17.67dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="본인 인증"
            android:textColor="#373839"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btn_modify_authentication_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            app:layout_constraintTop_toTopOf="@id/txt_modify_identification"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_identification"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="인증여부"
            android:textSize="12sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:background="@drawable/gray_border"/>

        <TextView
            android:id="@+id/txt_modify_phone_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.06dp"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_identification"
            app:layout_constraintStart_toStartOf="@id/txt_modify_identification"
            android:text="휴대폰 번호"
            android:textSize="14sp"
            android:textColor="#373839"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>
        <Button
            android:id="@+id/btn_modify_reauth_phnum"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginStart="9.97dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/txt_modify_phone_num_title"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_phone_num_title"
            app:layout_constraintStart_toEndOf="@id/txt_modify_phone_num_title"
            android:text="재인증하기"
            android:textColor="#75DECD"
            android:textSize="12sp"
            android:background="@drawable/button_pattern_border"/>

        <TextView
            android:id="@+id/txt_modify_phone_num_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.06dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_modify_phone_num_title"
            app:layout_constraintStart_toStartOf="@id/txt_modify_phone_num_title"
            android:text="010_xxxx_xxxx"
            android:textSize="14sp"
            android:textColor="#737373"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"/>
        <ImageView
            android:id="@+id/img_modify_phone_num_authentication"
            android:layout_width="15.76dp"
            android:layout_height="11.25dp"
            android:src="@drawable/check"
            app:layout_constraintTop_toTopOf="@id/txt_modify_phone_num_title"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_phone_num_data"
            app:layout_constraintStart_toStartOf="@id/btn_modify_authentication_status"
            app:layout_constraintEnd_toEndOf="@id/btn_modify_authentication_status"/>

        <TextView
            android:id="@+id/txt_modify_birthday_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.88dp"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_phone_num_data"
            app:layout_constraintStart_toStartOf="@id/txt_modify_phone_num_data"
            android:text="생년월일"
            android:textSize="14sp"
            android:textColor="#373839"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/txt_modify_birthday_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.06dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_modify_birthday_title"
            app:layout_constraintStart_toStartOf="@id/txt_modify_birthday_title"
            android:text="2000.10.01"
            android:textSize="14sp"
            android:textColor="#737373"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"/>
        <ImageView
            android:id="@+id/img_modify_birthday_authentication"
            android:layout_width="15.76dp"
            android:layout_height="11.25dp"
            android:src="@drawable/check"
            app:layout_constraintTop_toTopOf="@id/txt_modify_birthday_title"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_birthday_data"
            app:layout_constraintStart_toStartOf="@id/btn_modify_authentication_status"
            app:layout_constraintEnd_toEndOf="@id/btn_modify_authentication_status"/>

        <TextView
            android:id="@+id/txt_modify_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.88dp"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_birthday_data"
            app:layout_constraintStart_toStartOf="@id/txt_modify_birthday_data"
            android:text="성별"
            android:textSize="14sp"
            android:textColor="#373839"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/txt_modify_gender_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.06dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_modify_gender_title"
            app:layout_constraintStart_toStartOf="@id/txt_modify_gender_title"
            android:text="성"
            android:textSize="14sp"
            android:textColor="#737373"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"/>
        <ImageView
            android:id="@+id/img_modify_gender_authentication"
            android:layout_width="15.76dp"
            android:layout_height="11.25dp"
            android:src="@drawable/check"
            app:layout_constraintTop_toTopOf="@id/txt_modify_gender_title"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_gender_data"
            app:layout_constraintStart_toStartOf="@id/btn_modify_authentication_status"
            app:layout_constraintEnd_toEndOf="@id/btn_modify_authentication_status"/>

        <View
            android:id="@+id/divider14"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16.82dp"
            android:layout_marginEnd="17.09dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_gender_data"
            app:layout_constraintStart_toStartOf="@id/txt_modify_gender_data"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_modify_location_certification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.64dp"
            android:text="동네인증"
            android:textColor="#373839"
            android:textSize="16sp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@id/divider14"
            app:layout_constraintTop_toBottomOf="@id/divider14"/>
        <Button
            android:id="@+id/btn_modify_reauth_location"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginStart="9.97dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/txt_modify_location_certification_title"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_location_certification_title"
            app:layout_constraintStart_toEndOf="@id/txt_modify_location_certification_title"
            android:text="재인증하기"
            android:textColor="#75DECD"
            android:textSize="12sp"
            android:background="@drawable/button_pattern_border"/>


        <TextView
            android:id="@+id/txt_modify_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.68dp"
            app:layout_constraintStart_toStartOf="@id/txt_modify_location_certification_title"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_location_certification_title"
            android:text="위치"
            android:textSize="14sp"
            android:textColor="#373839"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/txt_modify_location_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.06dp"
            app:layout_constraintTop_toBottomOf="@id/txt_modify_location"
            app:layout_constraintStart_toStartOf="@id/txt_modify_location"
            android:text="xx동"
            android:textSize="14sp"
            android:textColor="#737373"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"/>
        <ImageView
            android:id="@+id/img_modify_location_authentication"
            android:layout_width="15.76dp"
            android:layout_height="11.25dp"
            android:src="@drawable/check"
            app:layout_constraintTop_toTopOf="@id/txt_modify_location"
            app:layout_constraintBottom_toBottomOf="@id/txt_modify_location_data"
            app:layout_constraintStart_toStartOf="@id/btn_modify_authentication_status"
            app:layout_constraintEnd_toEndOf="@id/btn_modify_authentication_status"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        app:menu="@menu/navi_menu"/>

</LinearLayout>